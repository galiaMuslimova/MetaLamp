include count/count.pug

mixin select(array)
  .select.drop(class = attributes.class)    
    each item in array
      .row.row_fill.select__row
        h3=item.name
        +count(item.count)
    if(attributes.class=="select_card")
      .row.row_fill.select__row.select__row_buttons 
        button.btn.btn_simple.reset(type="button") очистить
        button.btn.btn_simple.submit(type="button") применить
        
