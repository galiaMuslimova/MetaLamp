include ../input/input.pug
include ../calendar/calendar.pug

mixin form-double-date({ placeholders = ['ДД.ММ.ГГГГ', 'ДД.ММ.ГГГГ'], values = ['ДД.ММ.ГГГГ', 'ДД.ММ.ГГГГ'], titles = ['прибытие', 'выезд'] }) 
  .form-double-date.js-form-double-date    
    .form-double-date__row
      .form-double-date__item.form-double-date__item_is-first.js-form-double-date__item_is-first
        h3.form-double-date__subtitle= titles[0]
        .form-double-date__input   
          +input({ placeholder: placeholders[0],  value: values[0], openable: true, isReadonly: true })
      .form-double-date__item.form-double-date__item_is-second.js-form-double-date__item_is-second
        h3.form-double-date__subtitle= titles[1]
        .form-double-date__input
          +input({ placeholder: placeholders[1], value: values[1], openable: true, isReadonly: true })
    .form-double-date__calendar 
      +calendar()