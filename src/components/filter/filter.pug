include ../form/form.pug
include ../checkbox/checkbox.pug
include ../calendar/calendar.pug
include ../slider/slider.pug 

.filter
  .col
    .filter__item
      h3 даты пребывания в отеле
      +form(
        /*category=*/ "calendar", 
        /*array*/ [],
        /*value*/ "19 авг - 23 авг") 
    .filter__item
      h3 гости
      +form( 
        /*category=*/ "guests", 
        /*array*/ [{name: "Взрослые", count: 3}, {name: "Дети", count: 0}, {name: "Младенцы", count: 1}]) 
    .filter__item
      +slider("slider_filter", "диапазон цены", "Стоимость за сутки пребывания в номере")
    .filter__item 
      h3 правила дома
      +checkbox("smoke", "Можно курить")
      +checkbox("pet", "Можно с питомцами")
      +checkbox("invite", "Можно пригласить гостей (до 10 человек)")    
  .col
    .filter__item 
      h3 доступность
      +checkbox("corridor", "Широкий коридор", "Ширина коридоров в номере не менее 91 см.")
      +checkbox("assistant", "Помощник для инвалидов", "На 1 этаже вас встретит специалист и проводит до номера.") 
    .filter__item 
      h3 удобства номера
      +form(
        /*category=*/ "placement", 
        /*items*/ [{name: "Спальни", count: 2}, {name: "Кровати", count: 2}, {name: "Ванные комнаты", count: 0}])
    .filter__item 
      form
        .row.row_fill.filter__expandable
          h3 дополнительные удобства
          button.input__open.form_btn(type="button")
            i.icon-open
        .drop.checkbox-list 
          +checkbox("breakfast", "Завтрак")
          +checkbox("table", "Письменный стол")(class="checked")
          +checkbox("chair", "Стул для кормления")(class="checked")
          +checkbox("crib", "Кроватка")(class="checked")
          +checkbox("TV", "Телевизор")
          +checkbox("shampoo", "Шампунь")
