include ../input/input.pug
include ../radio/radio.pug
include ../toggle/toggle.pug
include ../calendar/calendar.pug

.card.login-card
  .card__inner
    .card__item 
      h1 Регистрация аккаунта
    .card__item
      .card__input
        +input('text', 'Имя')
      .card__input
        +input('text', 'Фамилия')
      .login-card__radio 
        +radio(["Мужчина", "Женщина"])
    .card__item
      h3 дата рождения 
      form
        +input("text", "ДД.ММ.ГГГГ")
        .drop.js-drop
          +calendar("js-datepicker_login")(class="select_card")
    .card__item
      h3 данные для входа в сервис
      .card__input
        +input("text", "Email")
      .card__input
        +input("text", "Пароль")
      .login-card__toggle
        +toggle("Получать спецпредложения")
    .card__item
      button.btn.btn_link зарегистрироваться
        span.icon-arrow
    .card__item
      .row.row_fill 
        p Уже есть аккаунт на Toxin
        .login-card__button
          button.btn.btn_white.nav__signin войти


      
