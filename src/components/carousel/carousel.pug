mixin carousel(num)  
  //-import all images from directory of this number as array "images"
  -function requireAll(requireContext) { return requireContext.keys().filter(el => el.includes(num)).map(requireContext) };
  -const images = requireAll(require.context("@c/catalog-list/img/", true, /\.(jpg|png|jpeg)$/));

  .carousel  
    .carousel__image.js-carousel__image
      .carousel__slide.shown.js-shown
        img(src=images[0] alt='room image')
      .carousel__slide
        img(src=images[1] alt='room image')
      .carousel__slide
        img(src=images[2] alt='room image')
      .carousel__slide
        img(src=images[3] alt='room image')
    .carousel__mover.js-carousel__mover.carousel__mover_left.js-carousel__mover_left
      span.icon-open
    .carousel__mover.js-carousel__mover.carousel__mover_right.js-carousel__mover_right
      span.icon-open
    .carousel__indicators.js-carousel__indicators.indicators
      .indicator.shown.js-shown
      .indicator
      .indicator
      .indicator