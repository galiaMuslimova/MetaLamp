include ../counter/counter.pug
include ../drop-buttons/drop-buttons.pug

mixin selector(items)
  .selector.js-selector
    .selector__content 
      each item in items
        .selector__row
          .selector__subtitle=item.name
          .selector__counter.js-selector__counter  
            +counter(item.amount)
    .selector__buttons 
      +drop-buttons()
          
