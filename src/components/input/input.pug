mixin input(type, value, focus)  
  .input-row.js-input-row(class=attributes.class)

    if(attributes.class=="subscript")
      input.input.js-input(type=type, placeholder=value)
      button.input__right(type="button")
        i.icon-arrow

    if(attributes.class=="dropdown")
      input.input.js-input(type=type, value=value)
      button.input__open.js-input__open(type="button")
        i.icon-open

    if(attributes.class=="date")
      input.input.js-input(type=type, placeholder=value)
      button.input__open.js-input__open(type="button")
        i.icon-open

    if(!(attributes.class))
      input.input.js-input(type=type, placeholder=value, autofocus=focus)    


  

    
    
