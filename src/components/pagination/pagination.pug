.pagination
  .row
    -let n = 4
    button.pagination__btn.pag-dots ...
    button.pagination__btn.pag-arrow.pag-left
      i.icon-arrow
    button.pagination__btn.pag-num.pag-checked.pag-shown(value=1) 1
    

    button.pagination__btn.pag-num.pag-shown(value=2) 2
    button.pagination__btn.pag-num.pag-shown(value=3) 3

    while n < 15
      button.pagination__btn.pag-num(value=n)= n
      -n++
    button.pagination__btn.pag-num.pag-shown(value=15) 15
    button.pagination__btn.pag-arrow.pag-right.pag-shown
      i.icon-arrow
  .row
