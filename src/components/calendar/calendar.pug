include ../button/button.pug

mixin calendar({classname, type})  
  .calendar
    .calendar__dp
    if(type=='calendar_with-buttons')
      .calendar__row
        .js-calendar__reset
          +button({ theme: 'simple', type: 'reset', text: 'очистить' })
        .js-calendar__submit
          +button({ theme: 'simple', type: 'submit', text: 'применить' })