include ../like/like.pug

mixin review(data)
  each val in data
    .review
      .review__col
        .review__photo
          img.review__image(src= require("@a/images/review-images/" + val.image) alt='person photo')
        .review__like 
          +like(val.like)
      .review__col 
        .review__title= val.name 
        .review__subtitle= val.time 
        .review__content= val.content
