extends ../base/base.pug
include ../../components/icon-text/icon-text.pug
include ../../components/chart/chart.pug
include ../../components/review/review.pug
include ../../components/like/like.pug
include ../../components/bullet/bullet.pug

block content
  -const selectedRoom = require("@/pages/room/room.json")
  -function roomRequireAll(requireContext) { return requireContext.keys().map(requireContext) };
  -const roomImages = roomRequireAll(require.context("@/pages/room/img/", true, /\.(jpg|png|jpeg)$/));

  .room
    .room__view
      .room__image.room__image_1
        img(src=roomImages[0] alt='room image')
      .room__image.room__image_2
        img(src=roomImages[1] alt='room image')
      .room__image.room__image_3
        img(src=roomImages[2] alt='room image')
    .container.room__container
      .room__info           
        h2 Сведения о номере
        +icon-text('Комфорт', 'Шумопоглощающие стены')
        +icon-text('Удобство', 'Окно в каждой из спален')
        +icon-text('Уют', 'Номер оснащён камином')
      .room__chart
        h2 Впечатления от номера              
        +chart(selectedRoom.review)
      .room__review 
        .row.row_fill
          h2 Отзывы посетителей номера
          p 2 отзыва
        -const data = require("@c/review/review.json")
        +review(data)
      .room__rules
        h2 Правила 
        +bullet(["Нельзя с питомцами", "Без вечеринок и мероприятий", 
        "Время прибытия — после 13:00, а выезд до 12:00"])
      .room__cancel 
        h2 Отмена 
        p Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.                
      .room__card
        include ../../components/room-card/room-card.pug
