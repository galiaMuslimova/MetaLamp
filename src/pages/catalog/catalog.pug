extends ../base/base.pug
include ../../components/filter/filter.pug
include ../../components/icon-open/icon-open.pug
include ../../components/catalog-list/catalog-list.pug
include ../../components/pagination/pagination.pug

block title 
  title Hotel catalog of rooms

block content
  .catalog.js-catalog
    .catalog__filter.js-catalog__filter
      +filter()
    .catalog__button.js-catalog__button
      +icon-open({})
    .catalog__list
      h1.catalog__title Номера, которые мы для вас подобрали
      .catalog__content
        +catalog-list()
      .catalog__pagination
        .catalog__pagination-content
          +pagination({id: "catalog"})
        
    
  